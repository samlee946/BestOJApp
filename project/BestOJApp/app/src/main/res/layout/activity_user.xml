    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_background"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_avatar"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#FFFFFF"
            android:text="@string/hint_username"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@drawable/button_post"
                android:id="@+id/button_post_number"
                android:gravity="end|center"
                android:text="0    "/>
            <Button
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@drawable/button_good_post"
                android:id="@+id/button_good_post_number"
                android:gravity="end|center"
                android:text="0    "/>
        </LinearLayout>
        <Button
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@drawable/last_time_login"
            android:text="@string/space"
            />
        <Button
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@drawable/last_time_sign"
            android:text="@string/space"/>
        <Button
            android:id="@+id/button_userpage_login"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@drawable/login_register_xml"/>
        <Button
            android:id="@+id/button_userpage_sign"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@drawable/sign_xml"/>
        <Button
            android:id="@+id/button_userpage_settings"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@drawable/user_settings_xml"/>

    </LinearLayout>
<!--</ScrollView>-->